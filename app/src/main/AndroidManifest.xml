<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jrubiralta.portalbdn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.jrubiralta.portalbdn.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.splash.SplashActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.login.LoginActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.activity.registre.RegisterActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.activity.home.HomeActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.activity.newIncident.NewIncidentActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.activity.settings.SettingsActivity"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme"/>
    </application>
</manifest>
